{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "esnext",                // Vite works best with esnext
    "moduleResolution": "bundler",     // Fixes relative import extension issues
    "target": "esnext",
    "lib": ["DOM", "ESNext"],          // Includes browser APIs and modern JS
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSX and React
    "jsx": "react-jsx",

    // Module Handling & Vite Compatibility
    "allowImportingTsExtensions": false,   // avoid .tsx import errors
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.js"],       // compile everything inside src
  "exclude": ["node_modules", "dist"]
}
